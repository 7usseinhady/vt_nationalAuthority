@using (Html.BeginForm("_vpCardsRequests", "CardsRequests", FormMethod.Post))
{
    @*@Html.Hidden("Value", "Search");*@
<div class="mt-3 dr-rtl grid_box_shadow mx-3 mb-2">

    <div class="row text-right">

        @* مكتب *@
        @*<div class="col-lg-6 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                مكتــــــــــــــــــــــــــب
            </span>
            <div>
                @Html.TextBox("officeName", "", new { @class = "form-control borderText arabic", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom" })
            </div>
        </div>*@

        @* منطقة *@
        @*<div class="col-lg-6 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                منطقة
            </span>
            <div>
                @Html.TextBox("areaName", "", new { @class = "form-control borderText arabic", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom" })
            </div>
        </div>*@

        @*  اسم الطلـــــــــــب *@
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                اسم الطلـــــــــــب
            </span>
            <div>
                @Html.TextBox("requestName", "", new { @class = "form-control borderText arNumSign", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom" })
            </div>
        </div>

        @*  تاريخ الطلب *@
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                تاريـــــــــخ  الطلب
            </span>
            <div>
                @Html.TextBox("dateRequest", "", new { @class = "form-control borderText date", autoComplete = "off" })
            </div>
        </div>

        @*  تاريخ الاستلام *@
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                تاريخ  الاستلام
            </span>
            <div>
                @Html.TextBox("dateRecive", "", new { @class = "form-control borderText date", autoComplete = "off" })
            </div>
        </div>

        @*  تاريخ التسليم *@
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                تاريـــــــــخ  التسليم
            </span>
            <div>
                @Html.TextBox("dateDelivery", "", new { @class = "form-control borderText date", autoComplete = "off" })
            </div>
        </div>

        @* الحالة  *@
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                الحالـــــــــــــــــــة  
            </span>
            <div>
                @Html.ListBox("status", ViewBag.status as SelectList, new { @class = "form-control borderDDL selectpicker", title = "-- الكل --", @data_live_search = "true" })
            </div>
        </div>

        @* بحث  *@
        <div class="col-sm-12 my-1 text-left mt-2 align-self-end">
            <button type="submit" id="btnSearchCardsRequests" onclick="loaderOpen();" class=""><i class=""></i> </button>
        </div>

    </div>
</div>
}
<script src="~/Scripts/light.js"></script>
<link href="~/Content/bootstrap-datepicker3/bootstrap-datepicker3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
