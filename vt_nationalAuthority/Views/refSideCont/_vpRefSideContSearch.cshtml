@{
    Layout = "~/Views/Shared/_partialLayout.cshtml";
}

@using (Html.BeginForm("_vpRefSideContSearch", "refSideCont", FormMethod.Post))
{
    <div class="mt-2 dr-rtl grid_box_shadow mx-3 mb-1 ">
        <div class="row text-right">

            @*  اسم جهه الاسناد - المقاول *@
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-4">
                    اسم جهه الاسناد - المقاول
                </span>
                <div>
                    @Html.TextBox("refSideContName", "", new { @class = "form-control borderText arNumSign" })
                </div>
            </div>

            @*  الرقم التأمينى *@
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-4">
                    الرقم التأمينى
                </span>
                <div>
                    @Html.TextBox("refSideContInsNum", "", new { @class = "form-control borderText number" })
                </div>
            </div>

            @*  الكيان القانونى *@
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-4">
                    الكيان القانونى
                </span>
                <div>
                    @Html.DropDownList("legalEntity", ViewBag.legalEntity as SelectList, " -- الكل -- ", new { @class = "form-control borderDDL selectpicker", @data_live_search = "true" })
                </div>
            </div>

            @* فعال *@
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-4">
                    الفاعليه
                </span>
                <div>
                    @Html.DropDownList("activation", ViewBag.activation as SelectList, " -- الكل -- ", new { @class = "form-control borderDDL selectpicker", @data_live_search = "true" })
                </div>
            </div>

            @* بحث جهه اسناد - مقاول *@
            <div class="col-lg-6 col-md-6 align-self-end col-sm-12 my-1 text-left">
                <button type="submit" id="btnSearchRefSideCont" onclick="loaderOpen();"> </button>
            </div>

        </div>
    </div>
}