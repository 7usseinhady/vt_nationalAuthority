@{
    var screen = "";
    var controller = "";
    string[] path = HttpContext.Current.Request.Url.AbsolutePath.Split('/');
    screen = path[2];
    controller = path[1];
}
@using (Html.BeginForm("_vpWorkersData", "Workers", FormMethod.Post, new { @id = "formIndex" }))
{
    @Html.Hidden("areas", TempData["areas"])
    @Html.Hidden("Offices", TempData["Offices"])

    @Html.Hidden("screen", screen)
    @Html.Hidden("controller", controller)

    <div class="mt-3 dr-rtl grid_box_shadow mx-3 mb-2 row">
        <div class="col-lg-12 col-md-12 col-sm-12 mx-3 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2">اسم العامل</span>
            <div>
                @Html.TextBox("WorkerName", "", new { @class = "form-control borderText arNumSign", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">الرقم التأمينى</span>
            <div>
                @Html.TextBox("WorkerSecNum", "", new { @class = "form-control borderText number", data_toggle = "tooltip", title = "ارقام فقط", data_placement = "bottom" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">الرقم القومى</span>
            <div>
                @Html.TextBox("WorkerNatNum", "", new { @class = "form-control borderText number", data_toggle = "tooltip", title = "-- الكل --", data_placement = "bottom" })
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">المهــــــــــــنــــــه</span>
            <div>
                @Html.ListBox("jops", ViewBag.Jops as MultiSelectList, new { @id = "jops", @class = "form-control borderDDL selectpicker", title = "-- الكل --", @data_live_search = "true" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">درجة المهاره</span>
            <div>
                @Html.ListBox("MahrDegree", ViewBag.MahrDegree as SelectList, new { @id = "MahrDegree", @class = "form-control borderDDL selectpicker", title = "-- الكل --", @data_live_search = "true" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">حالة التامين الصحى</span>
            <div>
                @Html.ListBox("MedicalInsurance", ViewBag.MedicalInsurance as SelectList, new { @id = "MedicalInsurance", @class = "form-control borderDDL selectpicker", title = "-- الكل --", @data_live_search = "true" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">تاريخ الحضور من</span>
            <div>
                @Html.TextBox("DateAttendFrom", "", new { @class = "form-control boorderText date", autoComplete = "off" })
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 mt-2 text-right">
            <span class="color_main102 font-weight-bold ml-2 mx-3">تاريخ الحضور الى</span>
            <div>
                @Html.TextBox("DateAttendTo", "", new { @class = "form-control boorderText date", autoComplete = "off" })
            </div>
        </div>
        <div class="text-left w-100 align-self-end mt-4">
            <button type="submit" id="btnSearchWorkers" onclick="loaderOpen();" class="btn btnsStyle btn-outline-primary searchBtnWork font-weight-bold"><i class=""></i></button>
        </div>

    </div>

}
<script src="~/Scripts/light.js"></script>
<link href="~/Content/bootstrap-datepicker3/bootstrap-datepicker3.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<script>
    $(function () {
        $('.selectpicker').selectpicker();
    });
</script>