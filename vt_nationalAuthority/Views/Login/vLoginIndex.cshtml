@model DataAccessLayer.Models.userModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/img/logo.png">

    <!-- Bootstrap CSS -->
    @*<script src="~/Scripts/jquery/jquery-3.3.1.js"></script>*@
    <link href="~/Content/bootstrap-4.1.3/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

    @*<link href="~/Content/css/all.css" rel="stylesheet" />*@
    @*<link href="~/Content/font-family/Kaushan/Kaushan.css" rel="stylesheet" />*@
    @*<link href="~/Content/font-family/Modak-Pacifico-Permanent-Marker-Righteous/display-swap/Modak-Pacifico-Permanent-Marker-Righteous.css" rel="stylesheet" />*@
    <link href="~/Content/font-family/Cairo-Changa-ElMessiri-Tajawal/display-swap/Cairo-Changa-ElMessiri-Tajawal.css" rel="stylesheet" />

    @*<link href="~/Content/checkbox.css" rel="stylesheet" />*@

    @Styles.Render("~/Content/cssLogin")
    @*<link href="~/Content/loaderStyle.css" rel="stylesheet" />*@
    @*@Styles.Render("~/bundles/select.css")*@
    @*@Styles.Render("~/bundles/datepicker")*@
    <title>تسجيل الدخول</title>
    <style>
        .footer1 {
            height: 35px !important;
            background-color: #2a9bb7 !important;
            color: #fff;
            padding: 0 20px;
        }

        .btncolor {
            background-color: #3498DB !important;
        }

        .textcolor {
            color: #3498DB !important;
        }

        .input-group-addon {
            padding: 6px 6px;
            font-size: unset;
        }

        .input-group-addon {
            width: unset;
        }
    </style>
    <link href="~/Content/NewLoginCss.css" rel="stylesheet" />
</head>
<body>


    <div>
        <div class="justify-content-around row mx-0 p-3" style="margin-top: 6%;">
            <div class="col-12 col-lg-8 col-md-10 mainLogin no-gutters px-0 row">
                <div class="align-items-md-center col-12 col-lg-6 d-flex mainLoginL  justify-content-center ">
                    <img src="~/img/logo.png" class="mainLoginImg" style="height:310px !important">
                </div>
                <div class="align-content-center col-12 col-lg-6 mainLoginR no-gutters p-5 row">

                    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post, new { role = "form", @class = "row" }))
                    {

                        <div class="form-group col-12 ">
                            <div class="form__group field">
                                @*<input type="text" class="form__field font102" placeholder="User Name" id="UserName" />*@
                                @Html.TextBoxFor(model => model.sUserName, new { @id = "txtname", @class = "form__field font102", @placeholder = "اسم المستخدم" })
                                <label class="form__label font102" for="txtname"> اسم المستخدم <i class="far fa-user px-2"></i> </label>
                            </div>
                        </div>
                        <div class="form-group col-12">
                            <div class="form__group field">
                                @*<input type="password" class="form__field font102" placeholder="Password" id="txtpass" />*@

                                @Html.PasswordFor(model => model.sPassword, new { @id = "txtpass", @class = "form__field font102", @placeholder = "كلمه السر" })
                                <i toggle="#password-field" class="far fa-eye px-2 toggle-password mt-3 text-white" style="position:absolute;left:0;" onclick="myFunction()"></i>

                                <label for="txtpass" class="form__label font102">كلمه السر <i class="fas fa-lock px-2"></i></label>
                            </div>
                        </div>
                        <div class="form-group pt-2 col-12">
                            <button type="submit" class="btn btn-block hvr-grow" style="color: #2b6f7e; border: unset;
    font-size: 15px;
    padding: 5px;background-color:#fff">
                                تسجيل الدخول  <i class="fas fa-sign-in-alt px-2"></i>
                            </button>
                            @*<button type="button" class="btn btn-block hvr-grow" onclick="location.href='@Url.Action("Index", "Home")'" style="color: #ffffff;border: 1px solid;background-color: #f0f8ff00;">
                                    <i class="fas fa-user-secret px-2" style="font-size: 27px;"></i> Guest
                                </button>*@
                        </div>

                    }
                </div>
            </div>

        </div>
    </div>

    <footer class="navbar-fixed-bottom footer1" style="text-align:center;">
        <h5 class="box mt-3" style="font-family: 'El Messiri', sans-serif;">حقوق النشر  &copy;  فيجن تك لتكنولوجيا المعلومات</h5>
    </footer>
    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Styles.Render("~/bundles/datepicker")*@

    @*<script src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>*@
    <script src="~/Scripts/Salert/sweetalert.js"></script>
    @*<script src="~/Scripts/light.js"></script>*@

    <style>
        .modal {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            z-index: 1040;
            overflow: auto;
            overflow-y: scroll;
        }

        .header {
            background-color: #306fc2;
            color: white;
            border-radius: 5px;
            border-bottom-left-radius: 0px;
            border-bottom-right-radius: 0px;
            border-bottom: none;
            overflow: hidden;
        }

        .gridSow {
            padding: 20px;
            box-shadow: 0px 2px 4px 0px #46b3ce59;
            border-radius: 26px;
        }
    </style>
    @*show password*@
    <script>
        $(document).ready(function () {

            $('#txtpass').keypress(function (e) {
                if(e.keyCode == 13)
                $('#btn_enter').click();
            });

            $('#btn_enter').focus();
        });
        function myFunction() {
            var x = document.getElementById("txtpass");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        function sAlert(text, index) {
            swal({
                type: 'error',
                title: text,
                showCloseButton: false,
                showCancelButton: false,
                showConfirmButton: false,// ok
                timer: 2000
            })
        }
    </script>
    @Html.Raw(TempData["LoginErrorMessage"])

</body>
</html>
