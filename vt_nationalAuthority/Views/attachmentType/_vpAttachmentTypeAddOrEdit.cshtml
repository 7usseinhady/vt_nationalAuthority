@model DataAccessLayer.Requests.attachmentTypeRequest
@{
    Layout = "~/Views/Shared/_partialLayout.cshtml";
}

@using (Html.BeginForm("_vpAttachmentTypeAddOrEdit", "attachmentType", FormMethod.Post, new { @id = "formAddOrEditAttachmentType"}))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OModel.iAttachmentTypeCode)

    <div class="mt-3 dr-rtl mx-3">
        <div class="row text-right grid_box_shadow">
            @* نوع المرفق *@
            <div class="col-lg-8 col-md-8 col-sm-12 col-12 my-1 text-right ">
                <span class="color_main102 font-weight-bold ml-2 mx-3">
                    نوع المرفق
                </span>
                <div>
                    @Html.TextBoxFor(model => model.OModel.sAttachmentTypeName, new { @class = "form-control borderText nummber", id="txtAttachmentType", required = "required" })
                </div>
            </div>

            @*اضافه - تعديل عن مرفق *@
            <div class="col-lg-4 col-md-4 align-self-end col-sm-12 my-1 text-right">
                <button type="submit" id="btnAddOrEditAttachmentType" onclick="loaderOpen();"></button>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12">
                @Html.ValidationMessageFor(model => model.OModel.sAttachmentTypeName, "", new { @class = "d-flex justify-content-center" })
            </div>
        </div>
    </div>
}