@{
    var screen = "";
    string[] path = HttpContext.Current.Request.Url.AbsolutePath.Split('/');
    screen = path[2];
    var controller = "";
    controller = path[1];
}
@using (Html.BeginForm("_vpDeleteSearchContractor", "Contractor", FormMethod.Post))
{
    Html.Hidden("ActionContractor", screen);
    Html.Hidden("contrSearch", controller);
  
     
    <div class="row  text-right grid_box_shadow">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">اســـــــم المـــــــقاول  </span>
            <div>
                @Html.ListBox("LhidContr", ViewBag.hidContactors_ as SelectList, new { @class = "form-control borderDDL selectpicker", @id = "hidContactors_", title = "--  الكل --", @data_live_search = "true" })
            </div>

        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">رقم التأمينى</span>
            <div>
                @Html.TextBox("txtNatContr", "", new { @class = "form-control boorderText number", data_toggle = "tooltip", title = "ارقام فقط", data_placement = "bottom" })
            </div>
        </div>
        <div class="col-lg-8 col-md-12 col-sm-12 col-12 my-1">
            <span class="color_main102 font-weight-bold ml-2 mx-3">المهمه المسنده اليه</span>
            <div>
                @Html.ListBox("LOperContr", ViewBag.OperContractor as SelectList, new { @class = "form-control borderDDL selectpicker", @id = "OperContractor", title = "--  الكل --", @data_live_search = "true" })
            </div>
        </div>
        <div class="text-left w-100 mt-3">
            <button type="submit" id="btnSearchContractor" onclick="loaderOpen();"> </button>
        </div>
    </div>
}
<script src="~/Scripts/light.js"></script>
<script src="~/Scripts/bootstrap-4.3.1-dist/bootstrap-select.min.js"></script>
<script>
    $(function () {
        $('.selectpicker').selectpicker();
    });
</script>