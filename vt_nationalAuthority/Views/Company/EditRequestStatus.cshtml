                الحالـــــــــــــــــــة
            </span>
            <div>
                @Html.DropDownList("statusEdit", ViewBag.statusEdit as SelectList, new { @class = "form-control borderText  borderDDL", title = "-- الكل --" })
            </div>
        </div>

        <div class="text-left w-100 mt-3">
            <button type="submit" name="submit" id="btnEditStatusRequest" onclick="loaderOpen();" class="btn btnsStyle btn-outline-info  font-weight-bold"><i class=""></i>تعديل حالة الطلب </button>
        </div>
    </div>
}
