@model DataAccessLayer.Requests.CardsRequestsRequest
@using (Html.BeginForm("EditRequestStatus", "Company", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ORequestById.iCardsRequestCode)
    <div class="row  text-right grid_box_shadow">

        @*  اسم الطلب *@
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-1" style="text-align: center;">
            <span class="color_main102 font-weight-bold ml-2 mx-3">
                اسم الطلب
            </span>
            <div>
                <strong style="font-size:x-large" > @ViewBag.CardName</strong>
                @*@Html.LabelFor(null,m => m.ORequestById.sCardsRequestName, new { @class = "form-control borderText arabic", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom", required = "required" })*@
