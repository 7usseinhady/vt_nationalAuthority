@model DataAccessLayer.Models.processStopModel
@{
    Layout = "~/Views/Shared/_partialLayout.cshtml";
}

@using (Html.BeginForm("_vpProcessStopSearch", "processStop", FormMethod.Post))
{
    <div class="mt-3 dr-rtl grid_box_shadow mx-3 mb-2 ">

        @Html.HiddenFor(model => model.iProcessCode)
        <div class="row text-right">
            @* سبب الايقاف *@
            <div class="col-lg-12 col-md-12 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-3">
                    سبب الايقاف
                </span>
                <div>
                    @Html.TextBoxFor(model => model.sProcessStopReason, new { @class = "form-control borderText arNumSign", data_toggle = "tooltip", title = "حروف عربية فقط", data_placement = "bottom" })
                </div>
            </div>

            @*   تاريخ بدء ايقاف العلية *@
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-3">
                    تاريخ بدء ايقاف العلية
                </span>
                <div>
                    @Html.TextBoxFor(model => model.sDateStartProcessStop, "{0:yyyy-MM-dd}", new { @class = "form-control borderText date", autocomplete = "off" })
                </div>
            </div>

            @* تاريخ نهايه ايقاف العملية *@
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 my-1">
                <span class="color_main102 font-weight-bold ml-2 mx-3">
                    تاريخ نهايه ايقاف العملية
                </span>
                <div>
                    @Html.TextBoxFor(model => model.sDateEndProcessStop, "{0:yyyy-MM-dd}", new { @class = "form-control borderText date", autocomplete = "off" })
                </div>
            </div>

            @* بحث *@
            <div class="col-sm-12 my-1 text-left mt-2 align-self-end">
                <button type="submit" id="btnSearchProcessStop" onclick="loaderOpen();" class=""><i class=""></i> </button>
            </div>
        </div>
    </div>
}